<Window x:Class="WPFChatServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChatServer"
        mc:Ignorable="d"
        Closing="Window_Closing" 
        Title="WPF Chat Server" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer Margin="0,37,0,0">
            <TextBox x:Name="tbxMain" HorizontalAlignment="Left" Height="388" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="772" />
        </ScrollViewer>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="31" Margin="0,1,0,0" VerticalAlignment="Top" Width="792">
            <MenuItem Header="Start Server" Name="btnStart_Server" IsCheckable="True" Height="24" Width="100" Click="BtnStart_Server_Click" />
            <MenuItem Header="Stop Server" Name="btnStop_Server" IsCheckable="True" Height="24" Width="100" Click="BtnStop_Server_Click"/>
        </Menu>

    </Grid>
</Window>
